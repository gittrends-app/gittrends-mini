{
  "name": "@gittrends/gittrends-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "run-s build-shared build-cache build-cli",
    "build-shared": "run-s build-env build-helpers build-entities build-github build-service",
    "build-entities": "yarn workspace @gittrends/entities build",
    "build-env": "yarn workspace @gittrends/env build",
    "build-github": "yarn workspace @gittrends/github build",
    "build-helpers": "yarn workspace @gittrends/helpers build",
    "build-service": "yarn workspace @gittrends/service build",
    "build-cache": "yarn workspace @gittrends/cache build",
    "build-cli": "yarn workspace @gittrends/cli build",
    "format": "prettier --config .prettierrc.json --write .",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "app/*",
      "shared/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
