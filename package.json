{
  "name": "@gittrends/gittrends-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn build-env && yarn build-lib && yarn build-cli",
    "build-env": "yarn workspace @gittrends/env build",
    "build-lib": "yarn workspace @gittrends/lib build",
    "build-cli": "yarn workspace @gittrends/cli build",
    "format": "prettier --config .prettierrc.json --write .",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "app/*",
      "shared/*"
    ]
  },
  "dependencies": {
    "@gittrends/env": "link:./shared/env",
    "@gittrends/lib": "link:./shared/lib"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.1",
    "@commitlint/config-conventional": "^17.1.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "4.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
